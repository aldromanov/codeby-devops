pipeline {
    agent {
        docker {
            image 'maven:3.9.9'
            args '-v /root/.m2:/root/.m2'
        }
    }
    
    environment {
        //GITHUB_URL = "https://github.com/aldromanov/codeby-devops.git"
        //GITHUB_CRED = "github"
        //GITHUB_BRANCH = "lesson26"
        APP_DEVOPS = "lesson26/devops"
        APP_JENKINS = "lesson26/jenkins"
        APP_WORLD = "lesson26/world"
    }
    
    stages {
        //stage('CheckOut') {
        //    steps {
        //        git branch: env.GITHUB_BRANCH, changelog: false, poll: false, credentialsId: env.GITHUB_CRED , url: env.GITHUB_URL
        //    }
        //}
        stage('Build and Test APP') {
            parallel{
                stage('APP DEVOPS') {
                    when {
                        changeset '${env.APP_DEVOPS}/src/main/java/app/*'
                    }
                    steps {
                        dir(env.APP_DEVOPS) {
                            echo 'Build APP DEVOPS'
                            sh 'mvn -B -DskipTests clean package'
                            echo 'Test APP DEVOPS'
                            sh 'mvn test'
                        } 
                    }
                    post {
                        always {
                            junit '**/target/surefire-reports/*.xml'
                        }
                    }
                }
                stage('APP JENKINS') {
                    when {
                        changeset '${env.APP_JENKINS}/src/main/java/app/*'
                    }
                    steps {
                        dir(env.APP_JENKINS) {
                            echo 'Build APP JENKINS'
                            sh 'mvn -B -DskipTests clean package'
                            echo 'Test APP JENKINS'
                            sh 'mvn test'
                        } 
                    }
                    post {
                        always {
                            junit '**/target/surefire-reports/*.xml'
                        }
                    }
                }
                stage('APP WORLD') {
                    when {
                        changeset '${env.APP_WORLD}/src/main/java/app/*'
                    }
                    steps {
                        dir(env.APP_WORLD) {
                            echo 'Build APP WORLD'
                            sh 'mvn -B -DskipTests clean package'
                            echo 'Test APP WORLD'
                            sh 'mvn test'
                        } 
                    }
                    post {
                        always {
                            junit '**/target/surefire-reports/*.xml'
                        }
                    }
                }
            }
        }
    }
}